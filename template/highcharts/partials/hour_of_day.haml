- commits = Hash[(0..23).to_a.zip([0]*24)].merge(Hash[stats.hour_stats.map { |month,s| [month,s.commits] }])
- block(:hour_of_day) do
  #chart_hour_of_day.col-md-5{:style => "height: 500px"}
  %script
    var chart_hour_of_day           = new Object();
    chart_hour_of_day.label         = "Commits per hour";
    chart_hour_of_day.label_y_axis  = "Hour";
    chart_hour_of_day.label_x_axis  = "Number of commits";
    chart_hour_of_day.target        = '#chart_hour_of_day';
    chart_hour_of_day.categories    = ["0h","1h","2h","3h","4h","5h","6h","7h","8h","9h","10h","11h","12h","13h","14h","15h","16h","17h","18h","19h","20h","21h","22h","23h"];
    chart_hour_of_day.series        = [{"name":"Commits","data":[#{commits.values.join(",")}]}];
  
    $(document).ready(function() {
    createBarChart(chart_hour_of_day);
    });
